# Server Environment Configuration Template
# Copy this to .env in the server directory and fill in your values

# Application Settings
NODE_ENV=development
PORT=3000

# API Keys
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
SERP_KEY=your_serp_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_cx_here

# CosmosDB
COSMOS_ENDPOINT=your_cosmos_db_endpoint_here
COSMOS_KEY=your_cosmos_db_key_here
COSMOS_DB_NAME=your_database_name_here
COSMOS_CONTAINER_NAME=your_cosmos_container_name_here

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# Session
SESSION_SECRET=your_session_secret_here

# Azure Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your_application_insights_key_here

